generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

model Job {
  id         String   @id @default(uuid())
  employerId String
  title      String
  skills     Json
  experience Int
  createdAt  DateTime @default(now())

  matches Match[]
}

model Candidate {
  id         String @id
  skills     Json
  experience Int

  matches Match[]
}

model Match {
  id          String @id @default(uuid())
  jobId       String
  candidateId String
  score       Float

  job       Job       @relation(fields: [jobId], references: [id])
  candidate Candidate @relation(fields: [candidateId], references: [id])

  @@unique([jobId, candidateId])
  @@index([jobId])
  @@index([candidateId])
}
